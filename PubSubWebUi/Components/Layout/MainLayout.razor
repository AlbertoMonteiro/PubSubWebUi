@inherits LayoutComponentBase

<FluentLayout>
	<FluentHeader Style="background-color: var(--neutral-layer-2);color: white">
		<img src="pubsub.svg" />
		<div style="padding: 0px 20px">
			Google Cloud PubSub Emulator Web UI
		</div>
		<PubSubWebUi.Components.Blocks.CurrentProject/>
	</FluentHeader>
	<FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
		<FluentAppBar Orientation="@(Orientation.Vertical)" Style="@(" background-color: var(--neutral-layer-2);")">
			<FluentAppBarItem Href="/"
							  Match="NavLinkMatch.All"
							  IconRest="new Icons.Filled.Size24.Home()"
							  IconActive="new Icons.Regular.Size24.Home()"
							  Text="Home" />
			<FluentAppBarItem Href="/projects"
							  Match="NavLinkMatch.All"
							  IconRest="new Icons.Filled.Size24.List()"
							  IconActive="new Icons.Regular.Size24.List()"
							  Text="Projects" />
		</FluentAppBar>
		<FluentBodyContent Class="body-content">
			<div class="content">
				@Body
			</div>
		</FluentBodyContent>
	</FluentStack>
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
	An unhandled error has occurred.
	<a href="." class="reload">Reload</a>
	<span class="dismiss">🗙</span>
</div>